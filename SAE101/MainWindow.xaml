<Window
    x:Class="SAE101.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gif="http://wpfanimatedgif.codeplex.com"
    xmlns:local="clr-namespace:SAE101"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="MainWindow1"
    Title="Marée Basse"
    Width="1250"
    Height="750"
    Closing="StopTout"
    FocusManager.FocusedElement="{Binding ElementName=Canvas}"
    mc:Ignorable="d" MinWidth="500" MinHeight="300" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Grid.IsSharedSizeScope="True" WindowState="Maximized" SizeToContent="Width" Icon="/img/poisson.ico">
    <Window.Resources>
        <FontFamily x:Key="Police">/SAE101;component/police/police.ttf#Minecraft</FontFamily>
    </Window.Resources>
    <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center">
        <Canvas
        x:Name="Canvas"
        Focusable="True"
        KeyDown="ClavierAppui"
        KeyUp="ClavierRelache"
        Visibility="Visible" Width="1250" Height="750" ClipToBounds="True">
            <Rectangle
            x:Name="fond1"
            Canvas.Left="0"
            Width="2481"
            Height="850"
            Panel.ZIndex="0" />
            <Rectangle
            x:Name="fond2"
            Canvas.Left="2480"
            Width="2481"
            Height="850"
            Panel.ZIndex="0" />
            <Label
            x:Name="lbDistance"
            Canvas.Left="362"
            Canvas.Top="10"
            Width="526"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            Panel.ZIndex="100"
            Visibility="Hidden"
            Content="0"
            FontFamily="{StaticResource Police}"
            FontSize="36"
            FontWeight="Bold" />
            <Rectangle
            x:Name="sol1"
            Canvas.Left="0"
            Canvas.Bottom="-20"
            Width="2481"
            Height="100"
            Panel.ZIndex="5" />
            <Rectangle
            x:Name="sol2"
            Canvas.Left="2480"
            Canvas.Bottom="-20"
            Width="2481"
            Height="100"
            Panel.ZIndex="5" />
            <Rectangle
            x:Name="Joueur"
            Canvas.Left="250"
            Canvas.Bottom="355"
            Width="55"
            Height="35"
            Panel.ZIndex="25"
            RenderTransformOrigin="0.5,0.5">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform Angle="0" />
                        <TranslateTransform />
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Rectangle
            x:Name="vague1"
            Canvas.Left="0"
            Canvas.Bottom="375"
            Width="2481"
            Height="30"
            Panel.ZIndex="100">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="img/vague.png" />
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle
            x:Name="vague2"
            Canvas.Left="2480"
            Canvas.Bottom="375"
            Width="2481"
            Height="30"
            Panel.ZIndex="100">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="img/vague.png" />
                </Rectangle.Fill>
            </Rectangle>
            <Canvas
            x:Name="Vie"
            Width="175"
            Height="45"
            Canvas.Left="1000"
            Canvas.Bottom="650"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Visibility="Hidden">
                <Rectangle
                x:Name="coeur1"
                Width="55"
                Height="45"
                Canvas.Left="0">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="/img/coeur.png" Stretch="Fill" />
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle
                x:Name="coeur2"
                Width="55"
                Height="45"
                Canvas.Left="65">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="/img/coeur.png" Stretch="Fill" />
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle
                x:Name="coeur3"
                Width="55"
                Height="45"
                Canvas.Left="130">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="/img/coeur.png" Stretch="Fill" />
                    </Rectangle.Fill>
                </Rectangle>
            </Canvas>
            <Canvas
            x:Name="transition"
            Width="2480"
            Height="750"
            Margin="-1900,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Panel.ZIndex="101"
            RenderTransformOrigin="0.5,0.5">
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform X="0" />
                    </TransformGroup>
                </Canvas.RenderTransform>
                <Canvas.Background>
                    <ImageBrush ImageSource="/img/transition.png" />
                </Canvas.Background>
            </Canvas>
            <Grid
            x:Name="Menu"
            Width="1500"
            Panel.ZIndex="105"
            Visibility="Visible" ClipToBounds="True" Canvas.Left="0" Canvas.Top="0">
                <Canvas
                Width="500"
                Height="750" Margin="-21,0,1021,0">
                    <Canvas.Background>
                        <ImageBrush ImageSource="/img/transition.png" />
                    </Canvas.Background>
                </Canvas>
                <Label
                x:Name="titre1"
                Margin="75,20,0,0"
                Content="MAREE"
                FontFamily="{StaticResource Police}"
                FontSize="96"
                Foreground="White" />
                <Label
                x:Name="titre2"
                Margin="75,120,0,0"
                Content="BASSE"
                FontFamily="{StaticResource Police}"
                FontSize="96"
                Foreground="White" />
                <Label
                x:Name="btnJouer"
                Margin="75,-150,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Jouer"
                FontFamily="{StaticResource Police}"
                FontSize="32"
                Foreground="White"
                MouseEnter="SurvolEntrée"
                MouseLeave="SurvolSortie"
                MouseLeftButtonUp="Jouer" />
                <Label
                x:Name="btnMonde"
                Margin="75,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Mondes"
                FontFamily="{StaticResource Police}"
                FontSize="32"
                Foreground="White"
                MouseEnter="SurvolEntrée"
                MouseLeave="SurvolSortie" MouseLeftButtonUp="MenuMonde" />
                <Label
                x:Name="lbNouvMonde"
                Margin="240,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="!"
                Visibility="Hidden"
                FontFamily="{StaticResource Police}"
                FontSize="32"
                Foreground="yellow"/>
                <Label
                x:Name="btnParametre"
                Margin="75,150,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Options"
                FontFamily="{StaticResource Police}"
                FontSize="32"
                Foreground="White"
                MouseEnter="SurvolEntrée"
                MouseLeave="SurvolSortie" MouseLeftButtonUp="MontrerOptions" />
                <Label
                x:Name="btnQuitter"
                Margin="75,0,0,80"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Content="Quitter"
                FontFamily="{StaticResource Police}"
                FontSize="32"
                Foreground="White"
                MouseEnter="SurvolEntrée"
                MouseLeave="SurvolSortie"
                MouseLeftButtonUp="Quitter" />
                <Canvas
                x:Name="record"
                Width="309"
                Height="100"
                Margin="75,350,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                    <Rectangle
                    Width="100"
                    Height="100" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="/img/record.png" Stretch="UniformToFill" />
                        </Rectangle.Fill>
                    </Rectangle>
                    <Label
                    x:Name="lbRecord"
                    Canvas.Left="120"
                    Canvas.Bottom="0"
                    Content="0"
                    FontFamily="{StaticResource Police}"
                    FontSize="48"
                    Foreground="White"
                    MouseLeftButtonUp="Quitter" HorizontalAlignment="Left" VerticalAlignment="Bottom" />
                </Canvas>
            </Grid>
            <Grid x:Name="menuMonde" Height="750" Width="580" Panel.ZIndex="105" Visibility="Hidden" >
                <Canvas x:Name="IconeMonde" Height="200" Width="200" Panel.ZIndex="106" Margin="150,200,190,305">
                    <Canvas.Background>
                        <ImageBrush ImageSource="/img/iconesMondes/monde1.png"/>
                    </Canvas.Background>
                </Canvas>
                <Label
                x:Name="lbPointRequis"
                Margin="-40,150,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Content=""
                FontFamily="{StaticResource Police}"
                FontSize="32"
                Foreground="Red" >
                </Label>
                <Label
                x:Name="lbMonde"
                Margin="-40,450,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Content="Monde 1"
                FontFamily="{StaticResource Police}"
                FontSize="32"
                Foreground="White" >
                </Label>
                <Label
                x:Name="lbMondeSuivant"
                Margin="380,450,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content=">"
                FontFamily="{StaticResource Police}"
                FontSize="32"
                Foreground="White"
                MouseEnter="SurvolEntrée"
                MouseLeave="SurvolSortie"
                MouseLeftButtonUp="MondeSuivant" >
                </Label>
                <Label
                x:Name="lbMondePrécédent"
                Margin="130,450,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="&lt;"
                FontFamily="{StaticResource Police}"
                FontSize="32"
                Foreground="White"
                Visibility="Hidden"
                MouseEnter="SurvolEntrée"
                MouseLeave="SurvolSortie"
                MouseLeftButtonUp="MondePrécédent" >
                </Label>
                <Label
                x:Name="lbConfirmerMonde"
                Margin="-40,550,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Content="Ok"
                FontFamily="{StaticResource Police}"
                FontSize="32"
                Foreground="White"
                MouseEnter="SurvolEntrée"
                MouseLeave="SurvolSortie"
                MouseLeftButtonUp="ConfirmerMonde" >
                </Label>
            </Grid>
            <Grid x:Name="menuPause" Width="400" Height="400" Margin="0,0,0,0" Visibility="hidden" Background="#4C000000" Panel.ZIndex="110" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="425" Canvas.Top="127">
                <Label
                x:Name="lbPause"
                Margin="0,-300,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Pause"
                FontFamily="{StaticResource Police}"
                FontSize="48"
                Foreground="White"
                Panel.ZIndex="111"/>
                <Label
                x:Name="btnReprendre"
                Margin="0,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Reprendre"
                FontFamily="{StaticResource Police}"
                FontSize="32"
                Foreground="White"
                MouseEnter="SurvolEntrée"
                MouseLeave="SurvolSortie" MouseLeftButtonUp="btnReprendre_MouseLeftButtonUp" />
                <Label
                x:Name="btnParametrePause"
                Margin="0,150,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Options"
                FontFamily="{StaticResource Police}"
                FontSize="32"
                Foreground="White"
                MouseEnter="SurvolEntrée"
                MouseLeave="SurvolSortie" MouseLeftButtonUp="MontrerOptions" />
                <Label
                x:Name="btnQuitterPartie"
                Margin="0,300,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Quitter"
                FontFamily="{StaticResource Police}"
                FontSize="32"
                Foreground="White"
                MouseEnter="SurvolEntrée"
                MouseLeave="SurvolSortie" MouseLeftButtonUp="btnQuitterPartie_MouseLeftButtonUp" />
            </Grid>
        </Canvas>
    </Viewbox>
</Window>
